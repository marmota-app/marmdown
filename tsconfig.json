{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": "./",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"paths": {
			"$markdown/*": ["src/*"],
			"*": ["node_modules/*"]
		}
	},
	"include": [
		"src/**/*",
		"test/**/*",
	]
}

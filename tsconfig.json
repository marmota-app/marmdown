{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": "./",
		"declaration": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"paths": {
			"$mfm/*": ["src/mfm/*"],
			"$element/*": ["src/element/*"],
			"$parser/*": ["src/parser/*"],
			"$markdown/*": ["src/*"],
			"*": ["node_modules/*"]
		}
	},
	"include": [
		"src/**/*",
		"test/**/*"
	]
}
